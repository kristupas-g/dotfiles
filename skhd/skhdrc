alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

alt + cmd - h : yabai -m window --space 1
alt + cmd - j : yabai -m window --space 2
alt + cmd - k : yabai -m window --space 3
alt + cmd - l : yabai -m window --space 4

alt - r : yabai -m space --rotate 90

alt - t : open -a kitty
alt - b : open -a Firefox

alt + shift - k : \
    yabai -m window --resize top:0:-40 ; \
    yabai -m window --resize bottom:0:-40
alt + shift - h : \
    yabai -m window --resize left:-40:0 ; \
    yabai -m window --resize right:-40:0
alt + shift - j : \
    yabai -m window --resize bottom:0:40 ; \
    yabai -m window --resize top:0:40
alt + shift - l : \
    yabai -m window --resize right:40:0 ; \
    yabai -m window --resize left:40:0

alt - b : yabai -m space --balance

